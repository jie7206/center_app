<table align="center" style="background:transparent">
	<tr><td>
		<% form_for(@book) do |f| %>
		  <%= f.error_messages %>

		  <p>书籍名稱：<%= f.text_field :name %></p>
      <p>标题显示：<%= f.text_field :title %></p>
      <p>好句收藏：<br/><%= f.text_area :collect_for_me, :size => "43x3" %></p>
      <p>教材备选：<br/><%= f.text_area :collect_for_ppt, :size => "43x3" %></p>
      <p>文档名称：<%= select("book", "filename", Dir.new(RAILS_ROOT+"/txt/").collect {|file| [ file.to_s, file.to_s ] }, { :include_blank => true }) %></p>
		  <p>背景图档：<%= select("book", "bg_filename", Dir.new(RAILS_ROOT+"/public/images/bg/").collect {|file| [ file.to_s, file.to_s ] }, { :include_blank => true }) %></p>
	    <p><%= f.check_box :is_default %> 將此书设为预设书籍</p>
      <p>&nbsp;</p>      
		  <p align="center"><%= f.submit submit_title %>&nbsp;&nbsp;<%= button_to_function '返回前頁', "history.back();" %></p>
		<% end %>
	</td></tr>
</table>