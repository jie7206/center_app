<h2>SRT格式字幕开始时间自动添加器</h2>
<%= golden_verse_bar %>

<table width="40%" border="1" cellpadding="8" cellspacing="0" style="border-collapse: collapse;" align="center">
  <tr>
    <td>
      <% form_tag( {:action => 'auto_add_str_start_time_result'}, {:name => 'input_form'} ) do %>
        <p>开始时间: <%= text_field_tag( :start_time,  "00:00:00,000", :onclick => 'this.select();' ) %></p>
        <p>文件纯文字码(UTF-8): <%= text_area_tag( :text_content,  '', :style => 'border: 1px;width:100%;height:600px;font-size:1.2em;' ) %></p>
        <p><input type="submit" value="执行"></p>
      <% end %>
    </td>
  </tr>
</table>