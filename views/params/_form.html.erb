<% form_for(@param) do |f| %>
  <%= f.error_messages %>
  <p>參數名稱：<%= f.text_field :name %></p>
  <p>參數標題：<%= f.text_field :title %></p>
  <p>排序號碼：<%= f.text_field :order_num %></p>
  <p>資料數值：<%= f.text_field :value, :size => 50 %></p>
  <p><%= f.check_box :rec_change %> 記錄資料數值變化</p> 
  <p>文檔內容：<br/><%= f.text_area :content, :size => "50x5" %></p>  
  <p><%= f.submit submit_title %>&nbsp;&nbsp;<%= button_to_function '返回前頁', "history.back();" %></p>
<% end %>