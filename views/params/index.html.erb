<h2>參數設定總表<%=param_link_bar%></h2>

<table border="1" cellpadding="5" cellspacing="0" style="border-collapse: collapse" bordercolor="#444444" align="center" width="97%">
  <tr class="th_row">
    <td></td>
    <td>參數名稱</td>
    <td width="170">參數標題</td>
    <td width="450">參數說明</td>
    <td width="200">資料內容</td>
    <!--td width="70">記錄</td-->
    <td width="40">排序</td> 
  </tr>
<% n=1 %>
<% @params.each do |param| %>
  <tr>
    <td><a name="<%=param.name%>"><%= link_to param.order_num, edit_param_path(param) %></a></td>
    <td><%= link_to param.name, { :controller => 'param_changes', :action =>'new', :param_id => param.id }, :title => param.title %></td>
    <td>
      <form action="/main/update_param_value/<%=param.id%>"><%= text_field_tag( :new_value, param.title, :class => 'param_quick_update_input',:style => "width:170px", :onclick => "this.select()" ) %><%= hidden_field_tag( :field_name,  'title' ) %><%= image_submit_tag('icon/empty.gif', :width => 1) %> </form>
    </td>
    <td>
      <form action="/main/update_param_value/<%=param.id%>"><%= text_field_tag( :new_value, param.content, :class => 'param_quick_update_input',:style => "width:450px", :_onclick => "this.select()" ) %><%= hidden_field_tag( :field_name,  'content' ) %><%= image_submit_tag('icon/empty.gif', :width => 1) %> </form>
    </td>
    <td>
      <form action="/main/update_param_value/<%=param.id%>"><%= text_field_tag( :new_value, param.value, :class => 'param_quick_update_input',:style => "width:200px", :noonclick => 'this.select();' ) %><%= hidden_field_tag( :ori_value,  param.value ) %><%= image_submit_tag('icon/empty.gif', :width => 1) %> </form>
    </td>
    <!--td align="center"><%= link_to(image_submit_tag('icon/pass_ok.png', :width => 15, :height => 12), {:controller => 'param_changes', :action => 'new', :param_id => param.id}, {:target => '_blank'}) if param.rec_change %></td-->
    <td align="center"><%= link_to '↑', {:action => 'order_up', :id => param} %> <%= link_to '↓', {:action => 'order_down', :id => param} %></td>
  </tr>
  <% n += 1 %>
<% end %>

</table>

<% 3.times do %>
<p>&nbsp;</p>
<% end %>
